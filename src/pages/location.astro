---
import CRUDView from '../components/CRUDView.astro';
import BaseLayout from "../layouts/BaseLayout.astro";
import {checkAuth} from "../services/auth/page-auth";

const user = await checkAuth(Astro);
if (!user) return Astro.redirect('/login', 302);

const fields = [
  {
    name: 'date_debut',
    label: 'Date de début',
    type: 'datetime-local',
    required: true
  },
  {
    name: 'date_fin_prevue',
    label: 'Date de fin prévue',
    type: 'datetime-local',
    required: true
  },
  {
    name: 'date_retour',
    label: 'Date de retour',
    type: 'datetime-local',
    required: true
  },
  {
    name: 'prix_base',
    label: 'Prix de base',
    type: 'number',
    required: true,
    min: 0,
    step: '0.01'
  },
  {
    name: 'supplements',
    label: 'Suppléments',
    type: 'number',
    min: 0,
    step: '0.01',
    defaultValue: 0
  },
  {
    name: 'id_client',
    label: 'Client',
    type: 'number',
    required: true
  },
  {
    name: 'id_personnel',
    label: 'Personnel',
    type: 'number',
    required: true
  },
  {
    name: 'id_saison',
    label: 'Saison',
    type: 'number',
    required: true
  },
  {
    name: 'id_materiel',
    label: 'Matériel',
    type: 'number',
    required: true
  }
];

const columns = [
  'Date début',
  'Date fin prévue',
  'Date retour',
  'Prix base',
  'Suppléments',
  'Client',
  'Personnel',
  'Saison',
  'Matériel'
];

const title = "Gestion des Locations";
---

<BaseLayout
    title={title}
>
  <CRUDView
      apiUrl="/api/locations"
      fields={fields}
      title={title}
      idField="id_location"
      columns={columns}
  />
</BaseLayout>
