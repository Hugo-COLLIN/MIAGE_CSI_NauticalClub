---
import CRUDView from '../components/CRUDView.astro';
import BaseLayout from "../layouts/BaseLayout.astro";

const fields = [
  {
    name: 'nom',
    label: 'Nom',
    type: 'text',
    required: true,
    maxLength: 30
  },
  {
    name: 'prenom',
    label: 'Prénom',
    type: 'text',
    required: true,
    maxLength: 30
  },
  {
    name: 'email',
    label: 'Email',
    type: 'email',
    required: true,
    maxLength: 50
  },
  {
    name: 'telephone',
    label: 'Téléphone',
    type: 'tel',
    required: true,
    title: 'Format: 0XXXXXXXXX ou +XXX... (format international)',
    placeholder: '0XXXXXXXXX ou +XXX...'
  },
  {
    name: 'piece_identite',
    label: "Pièce d'identité",
    type: 'text',
    maxLength: 50
  },
  {
    name: 'id_camping',
    label: 'ID Camping',
    type: 'number'
  }
];

const columns = ['Nom', 'Prénom', 'Email', 'Téléphone', "Pièce d'identité", 'Camping'];

const title = 'Gestion des Clients';
---

<BaseLayout
    title={title}
>
  <CRUDView
      apiUrl="/api/clients"
      fields={fields}
      title={title}
      idField="id_client"
      columns={columns}
  />
</BaseLayout>
