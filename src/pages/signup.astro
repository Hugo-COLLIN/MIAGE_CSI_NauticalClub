<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Création de compte</title>
  <script src="//unpkg.com/alpinejs" defer></script>
  <style>
      .signup-form {
          max-width: 400px;
          margin: 50px auto;
          padding: 20px;
          border: 1px solid #ccc;
      }

      .form-group {
          margin-bottom: 15px;
      }

      input {
          width: 100%;
          padding: 8px;
          margin-top: 5px;
      }

      button {
          width: 100%;
          padding: 10px;
          background: #007bff;
          color: white;
          border: none;
          cursor: pointer;
      }

      .error {
          color: red;
          margin-top: 10px;
      }

      .success {
          color: green;
          margin-top: 10px;
      }

      .login-link {
          margin-top: 15px;
          text-align: center;
      }
  </style>
</head>
<body>
<div class="signup-form">
  <h2>Création de compte</h2>
  <form @submit.prevent="submitForm"
        x-data="{
        formData: {
            nom: '',
            prenom: '',
            email: '',
            telephone: '',
            est_diplome: false,
            permis_bateau: false,
            specialite: '',
            tarif_horaire: '',
            date_embauche: '',
            identifiant: '',
            mot_de_passe: '',
            confirm_password: '',
            niveau_experimente: false,
            id_saison: 1
        },
        error: '',
        success: '',

        validateForm() {
            if (this.formData.mot_de_passe !== this.formData.confirm_password) {
                this.error = 'Les mots de passe ne correspondent pas';
                return false;
            }
            if (this.formData.mot_de_passe.length < 6) {
                this.error = 'Le mot de passe doit contenir au moins 6 caractères';
                return false;
            }
            return true;
        },

        async submitForm() {
            if (!this.validateForm()) return;

            try {
                const response = await fetch('/api/auth/signup', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(this.formData)
                });

                const result = await response.json();

                if (response.ok) {
                    this.success = result.message;
                    this.error = '';
                    await new Promise(resolve => setTimeout(resolve, 1000)); // attendre 1 seconde
                    window.location.href = '/login';
                } else {
                    this.error = result.error;
                    this.success = '';
                }
            } catch (err) {
                this.error = 'Une erreur est survenue lors de la création du compte';
                this.success = '';
            }
        }
    }">

    <div class="form-group">
      <label for="nom">Nom</label>
      <input type="text" id="nom" x-model="formData.nom" required maxlength="30">
    </div>

    <div class="form-group">
      <label for="prenom">Prénom</label>
      <input type="text" id="prenom" x-model="formData.prenom" required maxlength="30">
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" id="email" x-model="formData.email" required maxlength="50">
    </div>

    <div class="form-group">
      <label for="telephone">Téléphone</label>
      <input type="tel" id="telephone" x-model="formData.telephone" required>
    </div>

    <div class="form-group">
      <label for="est_diplome">Diplômé</label>
      <input type="checkbox" id="est_diplome" x-model="formData.est_diplome">
    </div>

    <div class="form-group">
      <label for="permis_bateau">Permis Bateau</label>
      <input type="checkbox" id="permis_bateau" x-model="formData.permis_bateau">
    </div>

    <div class="form-group">
      <label for="specialite">Spécialité</label>
      <input type="text" id="specialite" x-model="formData.specialite" maxlength="50">
    </div>

    <div class="form-group">
      <label for="tarif_horaire">Tarif horaire</label>
      <input type="number" id="tarif_horaire" x-model="formData.tarif_horaire" step="0.01" required>
    </div>

    <div class="form-group">
      <label for="date_embauche">Date embauche</label>
      <input type="date" id="date_embauche" x-model="formData.date_embauche" required>
    </div>

    <div class="form-group">
      <label for="identifiant">Identifiant</label>
      <input type="text" id="identifiant" x-model="formData.identifiant" required maxlength="30">
    </div>

    <div class="form-group">
      <label for="mot_de_passe">Mot de passe</label>
      <input type="password" id="mot_de_passe" x-model="formData.mot_de_passe" required maxlength="30">
    </div>

    <div class="form-group">
      <label for="confirm_password">Confirmer le mot de passe</label>
      <input type="password" id="confirm_password" x-model="formData.confirm_password" required maxlength="30">
    </div>

    <button type="submit">Créer le compte</button>

    <div class="error" x-text="error" x-show="error"></div>
    <div class="success" x-text="success" x-show="success"></div>
  </form>

  <div class="login-link">
    <a href="/login">Déjà un compte ? Se connecter</a>
  </div>
</div>
</body>
</html>
